<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/voteCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:layout_gravity="center"
    android:elevation="80dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/restaurantImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintBottom_toTopOf="@id/restaurantName"
            android:contentDescription="Restaurant Picture" />

        <!--image view for course image-->
<!--        <ImageView-->
<!--            android:id="@+id/idRestaurantPhoto"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="200dp"-->
<!--            android:scaleType="centerCrop" />-->

        <!--text view for our course name-->
        <TextView
            android:id="@+id/idRestaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:text="Restaurant Name"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
        </LinearLayout>

        <!--text view for our course description-->
        <TextView
            android:id="@+id/idRestaurantLocation"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="3dp"
            android:text="Location"
            android:textColor="@color/black" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
